{
  "mcpServers": {
    "ssh-mcp": {
      "command": "npx",
      "args": [
        "ssh-mcp",
        "-y",
        "--",
        "--host=your-server-ip",
        "--port=22",
        "--user=ubuntu",
        "--key=/path/to/your/ssh/key",
        "--timeout=60000",
        "--maxChars=1000"
      ]
    }
  }
}
